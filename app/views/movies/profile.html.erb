<p id="notice"><%= notice %></p>

<h1>My Movies</h1>

<% if @movies.length == 0 %>
<h3>You havent uploaded any movies</h3>
<%= link_to 'Upload one now!', new_movie_path %>
<% else %>
<table>
  <thead>
    <tr>
      <th>Poster</th>
      <th>Year</th>
      <th>Title</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= image_tag(movie.image, width: '100') %></td>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.genre %></td>
        <td><%= link_to 'View', movie %></td>
        <% if movie.user_id == current_user.id  %>
          <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
          <td><%= link_to 'Delete', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>