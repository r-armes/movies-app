<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Poster</th>
      <th>Year</th>
      <th>Title</th>
      <th>Genre</th>
      <th>Uploaded By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= image_tag(movie.image, width: '100') %></td>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.user.email %></td>
        <td><%= link_to 'View', movie %></td>
      </tr>
    <% end %>
  </tbody>
</table>
